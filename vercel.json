{
    "buildCommand": "prisma generate && next build",
    "outputDirectory": ".next",
    "framework": "nextjs",
    "functions": {
      "src/app/api/**/route.ts": { "maxDuration": 60 },
      "src/app/api/rss/fetch/route.ts": { "maxDuration": 60 },
      "src/app/api/rss/cron/route.ts": { "maxDuration": 60 },
      "src/app/api/scrape/cron/route.ts": { "maxDuration": 60 }
    },
    "crons": [
      { "path": "/api/rss/cron", "schedule": "0 0 * * *" },
      { "path": "/api/scrape/cron", "schedule": "0 12 * * *" }
    ],
    "env": {
      "PRISMA_GENERATE_DATAPROXY": "true",
      "PRISMA_GENERATE_SKIP_DOWNLOAD": "true"
    }
}